upstream backend {
  server backend:$BACKEND_PORT;
}

server {

  listen $FRONTEND_PORT;

  location /api {
    proxy_pass http://backend/;
  }

  location / {
    root   /usr/share/nginx/html;
    index  index.html index.htm;
    try_files $uri /index.html =404;
  }
  
  error_page   500 502 503 504  /50x.html;

  location = /50x.html {
    root   /usr/share/nginx/html;
  }
}
